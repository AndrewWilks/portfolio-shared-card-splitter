# Environment variables for the backend

# Database configuration (REQUIRED)
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example for local development: postgresql://postgres:postgres@localhost:5432/card_splitter
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/card_splitter

# Session/Auth configuration (REQUIRED in production, auto-generated in dev)
# Must be at least 32 characters for security
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# Environment mode (optional, defaults to 'development')
# Options: development, production, test
ENV=development

# Server configuration (optional)
# Port number (defaults to 8000)
PORT=8000

# CORS allowed origin (defaults to http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# Session max age in seconds (defaults to 86400 = 1 day)
SESSION_MAX_AGE=86400