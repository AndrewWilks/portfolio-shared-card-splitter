{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Debug Backend with Deno
    {
      "request": "launch",
      "name": "Debug Backend",
      "type": "node",
      "program": "${workspaceFolder}/backend/server.ts",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        // "--allow-all",
        "--env-file=${workspaceFolder}/backend/.env.local",
        "--watch"
      ],
      "outputCapture": "console"
    },
    // Run Vite frontend
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend Server (Vite)",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "--allow-all",
        "npm:vite",
        "--config",
        "./.config/vite.config.ts"
      ],
      "presentation": {
        "hidden": true
      },
      "attachSimplePort": 9228
    },
    // Debug Frontend in Chrome
    {
      "request": "launch",
      "name": "Debug Frontend (Chrome)",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Backend + Frontend)",
      "configurations": [
        "Debug Backend",
        "Frontend Server (Vite)",
        "Debug Frontend (Chrome)"
      ],
      "presentation": {
        "hidden": false,
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug Frontend",
      "configurations": ["Frontend Server (Vite)", "Debug Frontend (Chrome)"],
      "presentation": {
        "hidden": false,
        "order": 2
      },
      "stopAll": true
    }
  ]
}
